<%= form_for @micropost do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: t("microposts.create.compose_new_micropost") %>
  </div>
  <%= f.submit t("microposts.create.post"), class: "btn btn-primary" %>
  <span class="image">
    <%= f.file_field :image, accept: Settings.micropost.image.accept_type %>
  </span>
<% end %>
